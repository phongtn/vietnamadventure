---
export interface Category {
  title: string;
  description: string;
  image: string;
  link: string;
}

export interface Props {
  title: string;
  subtitle?: string;
  categories: Category[];
}

const { title, subtitle, categories } = Astro.props;
---

<section class="py-16 bg-background">
  <div class="container-custom">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-inter font-bold mb-4">{title}</h2>
      {subtitle && <p class="text-lg text-text/80 max-w-3xl mx-auto">{subtitle}</p>}
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {categories.map((category) => (
        <a href={category.link} class="group">
          <div class="relative h-80 overflow-hidden rounded-lg">
            <img 
              src={category.image} 
              alt={category.title}
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent"></div>
            
            <div class="absolute bottom-0 left-0 w-full p-6 text-white">
              <h3 class="text-2xl font-inter font-semibold mb-2 group-hover:text-secondary transition-colors duration-300">{category.title}</h3>
              <p class="text-white/80">{category.description}</p>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
