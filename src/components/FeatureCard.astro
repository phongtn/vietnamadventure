---
export interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
  tagline?: string;
}

const { title, description, image, link, tagline } = Astro.props;
---

<a href={link} class="card group h-full flex flex-col relative overflow-hidden">
  <div class="relative overflow-hidden h-56">
    <img 
      src={image} 
      alt={title} 
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
    />
    {tagline && (
      <div class="absolute top-4 right-4 bg-secondary text-white px-3 py-1 rounded-full text-sm font-medium">
        {tagline}
      </div>
    )}
  </div>
  
  <div class="p-6 flex flex-col flex-grow">
    <h3 class="text-xl font-inter font-semibold mb-2 group-hover:text-secondary transition-colors duration-300">{title}</h3>
    <p class="text-text/80 mb-4 flex-grow">{description}</p>
    
    <div class="flex items-center text-primary font-medium mt-auto">
      <span>Explore</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
      </svg>
    </div>
  </div>
</a>
