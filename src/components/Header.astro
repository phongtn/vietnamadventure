---
import Logo from './Logo.astro';
import LanguageSelector from './LanguageSelector.astro';
import { getLanguageFromURL, useTranslations } from '../i18n/utils';

// Get the current language from the URL
const lang = getLanguageFromURL(Astro.url);
const t = useTranslations(lang);

// Define navigation items with translation keys
const navItems = [
  { titleKey: 'nav.home', path: `/${lang}/` },
  { titleKey: 'nav.trail-running', path: `/${lang}/trail-running` },
  { titleKey: 'nav.hiking', path: `/${lang}/hiking` },
  { titleKey: 'nav.climbing', path: `/${lang}/climbing` },
  { titleKey: 'nav.adventures', path: `/${lang}/adventures` },
  { titleKey: 'nav.about', path: `/${lang}/about` },
  { titleKey: 'nav.contact', path: `/${lang}/contact` },
];

const currentPath = Astro.url.pathname;

// Function to check if a nav item is active
const isActive = (path: string) => {
  if (path === `/${lang}/` && (currentPath === `/${lang}/` || currentPath === '/')) return true;
  if (path !== `/${lang}/` && currentPath.startsWith(path)) return true;
  return false;
};
---

<header class="bg-white shadow-md sticky top-0 z-50">
  <div class="container-custom flex items-center justify-between py-4">
    <!-- Logo -->
    <a href={`/${lang}/`} class="flex items-center">
      <Logo />
      <span class="font-inter font-semibold text-xl">VietnamADV</span>
    </a>

    <!-- Mobile Menu Button -->
    <div class="flex items-center gap-4 md:hidden">
      <LanguageSelector />
      <button
        id="menu-toggle"
        class="text-text focus:outline-none"
        aria-label="Toggle menu"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Desktop Navigation -->
    <div class="hidden md:flex items-center space-x-6">
      <nav class="flex space-x-6">
        {navItems.map(item => (
          <a
            href={item.path}
            class={`font-inter font-medium hover:text-secondary transition duration-300 ${isActive(item.path) ? 'text-secondary' : 'text-text'}`}
          >
            {t(item.titleKey as any)}
          </a>
        ))}
      </nav>
      <LanguageSelector />
    </div>
  </div>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="md:hidden hidden">
    <nav class="container-custom py-4 flex flex-col space-y-4 border-t border-gray-200">
      {navItems.map(item => (
        <a
          href={item.path}
          class={`font-inter font-medium hover:text-secondary transition duration-300 ${isActive(item.path) ? 'text-secondary' : 'text-text'}`}
        >
          {t(item.titleKey as any)}
        </a>
      ))}
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle functionality
  document.addEventListener('DOMContentLoaded', () => {
    const menuToggle = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');

    if (menuToggle && mobileMenu) {
      menuToggle.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>
