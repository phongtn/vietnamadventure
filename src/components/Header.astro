---
// Get current URL to highlight active link
const { pathname } = Astro.url;
---

<header class="bg-forest text-white sticky top-0 z-50 shadow-md">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center py-4">
      <a href="/" class="text-2xl font-bold font-inter tracking-tight flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 128 128" fill="none">
          <path d="M64 16L16 112H112L64 16Z" fill="#F4F1DE"/>
          <path d="M64 48L40 96H88L64 48Z" fill="#1B998B"/>
          <path d="M64 64L52 88H76L64 64Z" fill="#FF6B35"/>
        </svg>
        VietnamADV
      </a>
      
      <!-- Mobile Menu Toggle -->
      <div class="md:hidden" x-data="{ open: false }">
        <button @click="open = !open" class="text-white focus:outline-none">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" x-show="!open" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" x-show="open" />
          </svg>
        </button>
        
        <!-- Mobile Menu -->
        <div x-show="open" @click.away="open = false" class="absolute top-16 right-4 bg-forest shadow-lg rounded-lg p-4 w-48" x-transition>
          <nav class="flex flex-col space-y-3">
            <a href="/" class={`hover:text-orange transition ${pathname === "/" ? "text-orange font-semibold" : ""}`}>Home</a>
            <a href="/guides" class={`hover:text-orange transition ${pathname.includes("/guides") ? "text-orange font-semibold" : ""}`}>Adventure Guides</a>
            <a href="/adventures" class={`hover:text-orange transition ${pathname.includes("/adventures") ? "text-orange font-semibold" : ""}`}>Find Adventures</a>
            <a href="/experiences" class={`hover:text-orange transition ${pathname.includes("/experiences") ? "text-orange font-semibold" : ""}`}>Experiences</a>
            <a href="/about" class={`hover:text-orange transition ${pathname === "/about" ? "text-orange font-semibold" : ""}`}>About</a>
          </nav>
        </div>
      </div>
      
      <!-- Desktop Menu -->
      <nav class="hidden md:flex space-x-8 items-center font-inter">
        <a href="/" class={`hover:text-orange transition ${pathname === "/" ? "text-orange font-semibold" : ""}`}>Home</a>
        <a href="/guides" class={`hover:text-orange transition ${pathname.includes("/guides") ? "text-orange font-semibold" : ""}`}>Adventure Guides</a>
        <a href="/adventures" class={`hover:text-orange transition ${pathname.includes("/adventures") ? "text-orange font-semibold" : ""}`}>Find Adventures</a>
        <a href="/experiences" class={`hover:text-orange transition ${pathname.includes("/experiences") ? "text-orange font-semibold" : ""}`}>Experiences</a>
        <a href="/about" class={`hover:text-orange transition ${pathname === "/about" ? "text-orange font-semibold" : ""}`}>About</a>
      </nav>
    </div>
  </div>
</header>
