---
interface Props {
  title: string;
  subtitle?: string;
  image: string;
  fullHeight?: boolean;
  overlayColor?: string;
  textAlignment?: 'left' | 'center' | 'right';
}

const { 
  title, 
  subtitle, 
  image, 
  fullHeight = false, 
  overlayColor = 'rgba(0, 0, 0, 0.4)',
  textAlignment = 'center'
} = Astro.props;

const heightClass = fullHeight ? 'min-h-screen' : 'min-h-[60vh]';
const textAlignmentClass = {
  'left': 'text-left items-start',
  'center': 'text-center items-center',
  'right': 'text-right items-end'
}[textAlignment];
---

<div 
  class={`relative ${heightClass} w-full flex items-center justify-center overflow-hidden`}
  style={`background-image: url(${image}); background-size: cover; background-position: center;`}
>
  <div 
    class="absolute inset-0 z-0" 
    style={`background-color: ${overlayColor};`}
  ></div>
  
  <div class={`container mx-auto px-4 relative z-10 flex flex-col ${textAlignmentClass}`}>
    <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4 max-w-3xl font-inter">
      {title}
    </h1>
    {subtitle && 
      <p class="text-xl md:text-2xl text-white max-w-2xl">
        {subtitle}
      </p>
    }
  </div>
</div>
