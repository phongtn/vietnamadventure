---
export interface Props {
  image: string;
  alt: string;
  title: string;
  subtitle?: string;
  photographerName?: string;
}

const { image, alt, title, subtitle, photographerName } = Astro.props;
---

<div class="relative">
  <!-- Hero Image -->
  <div class="w-full h-[50vh] md:h-[70vh] relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-forest/50 to-forest/70"></div>
    <img 
      src={image} 
      alt={alt} 
      class="w-full h-full object-cover"
    />
    
    <!-- Photo Credit -->
    {photographerName && (
      <div class="absolute bottom-2 right-4 text-white/80 text-xs">
        Photo: {photographerName}
      </div>
    )}
  </div>
  
  <!-- Hero Content -->
  <div class="absolute inset-0 flex items-center justify-center text-center px-4">
    <div class="max-w-4xl">
      <h1 class="text-3xl md:text-5xl lg:text-6xl font-bold text-white font-inter leading-tight mb-4">
        {title}
      </h1>
      {subtitle && (
        <p class="text-lg md:text-xl text-white/90 max-w-2xl mx-auto font-source">
          {subtitle}
        </p>
      )}
    </div>
  </div>
</div>
